---
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'
import { Icon } from 'astro-icon/components'
import '../assets/scss/components/figcaption.scss'

interface Props {
  src: string
  alt: string
  width: number
  height: number
  metadata: ImageMetadata
}

const props = Astro.props
---

<figure class="blog-figure">
  <figcaption>
    <span>
      <slot />
      <Icon name="picture-in-picture" class="picture-in-picture" width={18} height={18} />
    </span>
  </figcaption>
  <Image {...props} class="" />
</figure>
