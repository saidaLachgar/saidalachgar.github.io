---
import { useTranslations } from "@/i18n";

const t = useTranslations();

interface Props {
  date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString(t("siteMetadata.language"), {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
