---
import { Image } from 'astro:assets'
import img1 from '../assets/img/playground-planetary-facts.png'
import img2 from '../assets/img/playground-whatif.png'
import img3 from '../assets/img/playground-top-global.png'
import img4 from '../assets/img/playground-tmv.png'
---

<section class="playground" id="playground" data-reveal>
  <div class="infinite-text">
    <p>PLAYGROUND &nbsp;</p>
    <p>PLAYGROUND &nbsp;</p>
    <p>PLAYGROUND &nbsp;</p>
    <p>PLAYGROUND &nbsp;</p>
    <p>PLAYGROUND &nbsp;</p>
    <p>PLAYGROUND &nbsp;</p>
    <p>PLAYGROUND &nbsp;</p>
    <p>PLAYGROUND &nbsp;</p>
    <p>PLAYGROUND &nbsp;</p>
  </div>
  <div class="grid">
    <a href=""><Image src={img1} alt="xxx" width="560" height="349" /></a>
    <a href=""><Image src={img2} alt="xxx" width="560" height="349" /></a>
    <a href=""><Image src={img3} alt="xxx" width="527" height="746" /></a>
    <a href=""><Image src={img4} alt="xxx" width="527" height="746" /></a>
  </div>
</section>

<style lang="scss">
  .playground {
    .infinite-text {
      display: flex;
      background-color: #000;
      color: #fff;
      white-space: nowrap;
      overflow: hidden;
      p {
        font-size: 57px;
        text-transform: uppercase;
        font-weight: 700;
        will-change: transform;
        animation: loopText 2s infinite linear;
        transform: translate3d(0, 0, 0);
      }
    }
    .grid {
      display: grid;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      row-gap: 50px;
      img {
        margin: 0 auto;
      }
      a:nth-child(2) {
        grid-row: 2/3;
        grid-column: 1/2;
        ~ a {
          grid-row: 1/3;
        }
      }
    }
    @media (max-width: 655px) {
      .grid {
        grid-template-columns: 1fr;
      }
      .infinite-text p {
        animation-duration: 4s;
      }
    }
  }

  @keyframes loopText {
    from {
      transform: translate3d(0, 0, 0);
    }
    to {
      transform: translate3d(-100%, 0, 0);
    }
  }
</style>
