---
import { Picture } from 'astro:assets'
import type { CollectionEntry } from 'astro:content'

type Props = {
  post: CollectionEntry<'blog'>
  full?: boolean
}

const { post } = Astro.props
---

<Picture
  widths={[300, 600, 1000, 2000, 3000, 4000]}
  sizes="100vw"
  src={post.data.cover!}
  alt={post.data.title}
  formats={['avif', 'webp']}
  loading="eager"
/>

<style>
  img {
    width: 100%;
    height: auto;
    object-fit: cover;
    margin: 30px 0;
  }
</style>
