---
import { Icon } from 'astro-icon/components'

type Props = {
  description?: string
  via?: string
}

const { description, via } = Astro.props

let URL = `https://twitter.com/intent/tweet?url=${Astro.request.url}`

if (description) URL += `&text=${description}`
if (via) URL += `&via=${via}`
---

<a class="social-share-btn" target="_blank" href={URL} rel="noopener noreferrer">
  <Icon name="x" width={20} height={20} />
</a>
